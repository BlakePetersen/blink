{
  "name": "blink-tui",
  "version": "0.1.0",
  "description": "Session browser TUI for Blink",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blink-tui": "dist/index.js",
    "blink-settings": "dist/settings-index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "BLINK_DEV=1 tsx src/index.tsx",
    "start": "node dist/index.js",
    "settings": "tsx src/settings-index.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "date-fns": "^3.0.0",
    "gray-matter": "^4.0.3",
    "ink": "^4.4.1",
    "ink-text-input": "^5.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
